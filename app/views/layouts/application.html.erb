<!DOCTYPE html>
<html>
  <head>
    <title>Maddies</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Shadows+Into+Light" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
       <a class="navbar_brand" href="<%= root_path %>">MANUELA'S</a>
       <div class="collapse navbar-collapse" id="navbarSupportedContent">
         <ul class="navbar-nav mx-auto">
           <li class="nav-item active">
             <%= link_to "Buy", user_products_path, class: "navbar_link first_link" %>
           </li>
          <li class="nav-item">
            <%= link_to "Sell", new_user_product_path, class: "navbar_link"%>
          </li>
        </div>
     <% if logged_in? %>
       <ul class="navbar-nav ml-auto">
           <li class="nav-item">
             <%=link_to  "Edit profile", edit_user_path(current_user), class:'btn btn-light' %>
          </li>
          <li class="nav-item">
              <%= link_to "My cart",user_path(current_user), class: "btn btn-light" %>
          </li>
           <li class="nav-item">
               <%= link_to "Logout", '/logout', method: :delete, class: "btn btn-light" %>
           </li>
       </ul>
     <% else  %>
       <ul class="navbar-nav ml-auto">
           <li class="nav-item">
               <%= link_to "Login", '/login', class: "btn btn-light" %>
           </li>
           <li class="nav-item">
               <%= link_to "Signup", '/signup', class: "btn btn-light" %>
           </li>
       </ul>
     <% end %>
   </nav>
    <div class='container' id='main'>
      <!-- <% if logged_in? %>
        <%= button_to "Logout", '/logout', method: :delete %>
      <% end %>
      -->
      <%= yield %>
    </div>
  </body>
</html>
